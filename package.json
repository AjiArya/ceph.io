{
  "name": "ceph.io",
  "version": "0.1.0",
  "description": "Static site for www.ceph.io",
  "scripts": {
    "css": "postcss src/css/main.css --output dist/css/main.css",
    "site": "npx eleventy",
    "clean": "rimraf dist",
    "start": "npm run dev",
    "dev": "cross-env NODE_ENV=development npm-run-all clean --parallel 'site -- --serve' 'css -- --watch'",
    "build": "cross-env NODE_ENV=production npm-run-all clean --parallel site css",
    "debug": "cross-env DEBUG=* npx eleventy"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ceph/ceph.io.git"
  },
  "author": "SoftIron Limited <info@softiron.com> (https://softiron.com)",
  "contributors": [
    "Adam Duncan <adam@softiron.com>"
  ],
  "bugs": {
    "url": "https://github.com/ceph/ceph.io/issues"
  },
  "homepage": "https://github.com/ceph/ceph.io#readme",
  "license": "CC-BY-SA-3.0",
  "devDependencies": {
    "@11ty/eleventy": "0.11.0",
    "@11ty/eleventy-navigation": "0.1.6",
    "cross-env": "7.0.2",
    "cssnano": "^4.1.10",
    "eleventy-plugin-i18n": "0.1.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "postcss-normalize": "^9.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "2.0.5",
    "rimraf": "3.0.2"
  }
}
