---
layout: base
pagination:
  size: 2
permalink: '/{{ locale }}/solutions/case-studies{% if pagination.pageNumber > 0 %}/page/{{ pagination.pageNumber + 1}}{% endif %}/index.html'
---

<!-- prettier-ignore -->
{% set caseStudyLocaleTag = locale + '-case-study' %}
{% set caseStudyFilters = collections[caseStudyLocaleTag] | collectionTags([caseStudyLocaleTag]) %}
{% set caseStudies = pagination.items %}

{% include 'components/navigation-secondary.njk' %}

<div class="flex flex--justify-between">
  <h1 class="h1">{{ title }}</h1>
  <div>
    <select id="filters" onchange="javascript:location.href = this.value;">
      <option value="" selected disabled hidden>Category</option>
      {% for item in caseStudyFilters %}
        <option value="/{{ locale }}/solutions/case-studies/category/{{ item | slug }}/">
          {{ item }}</a>
      </option>
    {% endfor %}
  </select>
</div>
</div>

<ul class="grid grid--cols-4 list-none p-0">
{% for item in caseStudies %}
  <li>
    {% include "components/case-study-card.njk" %}
  </li>
{% endfor %}
</ul>

{% include "components/pagination.njk" %}

{{ content | safe }}