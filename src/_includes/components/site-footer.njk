{% set siteTree = collections[locale] | eleventyNavigation %}
{% set navPages = siteTree[0].children %}

{# TEMP #}
<style>
  [aria-label="Site"] > ul {
    display: grid;
    grid-gap: 1rem;
    grid-template-columns: repeat(auto-fit, minmax(8rem, 1fr));
  }
  [aria-label="Site"] ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  [aria-label="Site"] li {
    margin-top: 0.5em;
  }
  [aria-label="Site"] [aria-current="page"] {
    font-weight: bold;
  }
</style>

<footer>
  <div class="wrapper">
    {# TEMP site tree so we can move around the site #}
    {# Let's just list two levels manually, as we don't want to recurse through all levels #}
    <nav aria-label="Site">
      <ul>
        {%- for item in navPages %}
          <li>
            <a href="{{ item.url | url }}" {% if item.url == page.url %} aria-current="page"{% endif %}>{{ item.title }}</a>
            {%- if item.children %}
              <ul>
                {%- for subitem in item.children %}
                  <li>
                    <a href="{{ subitem.url | url }}"  {% if subitem.url == page.url %} aria-current="page"{% endif %}>{{ subitem.title }}</a>
                  </li>
                {%- endfor %}
              </ul>
            {%- endif %}
          </li>
        {%- endfor %}
      </ul>
    </nav>

    <p>&copy; {{ page.date.getFullYear() }} All rights reserved.</p>
  </div>
</footer>