<a href="{{ item.url }}">
  <img class="mb-2" src="{% if item.data.image %}{{ item.data.image }}{% else %}https://via.placeholder.com/640x360{% endif %}" alt="" />
</a>
<a href="{{ item.url }}">{{ item.data.title }}</a>
<p class="p text-xs color-grey-500 mt-1">
  <time datetime="{{ item.data.date }}">{{ item.data.date | formatDate(locale) }}</time>
</p>
<p class="p text-sm text-leading-tighter">{{ item.templateContent | removeHtml | truncate }}</p>

